import javax.swing.*;
import java.awt.*;
import java.awt.event.*;



public class ColorAssignment extends JComponent {
	
	public void paint(Graphics g) {
		Dimension d = getSize();
		
		g.setColor(Color.red);
		g.fillRect(1, 2, d.width-2, d.height-2);
		
	}
	
	protected ColorAssignment ColorBox;
	protected JLabel labelRed;
	protected JLabel labelGreen;
	protected JLabel labelBlue;
	protected JList SelectionList;
	protected JButton save;
	protected JButton reset;
	protected JButton RedMinus;
	protected JButton RedPlus;
	protected JButton GreenMinus;
	protected JButton GreenPlus;
	protected JButton BlueMinus;
	protected JButton BluePlus;
	
	
	
	public static void main (String argv[])
	{
		new ColorAssignment("Color Assignment");
	}
	
	
	public ColorAssignment(String title) 
	{
		super(title);		// call constructor of base class
		setBounds(100, 100, 250,100);
		addWindowListener(new WindowDestroyer());
		
		//Set window grid
		getContentPane().setLayout(new GridBagLayout());
		GridBagConstraints gbc = new GridBagConstraints();
		gbc.fill = GridBagConstraints.HORIZONTAL;
		gbc.fill = GridBagConstraints.VERTICAL;
		
		//Big color window
		gbc.gridx = 0;
		gbc.gridy = 0;
		
		
		
		
	}
	
	private class WindowDestroyer extends WindowAdapter 
	{      
		// implement only the function that you want
		public void windowClosing(WindowEvent e) 
		{    
			System.exit(0);  
		}                                                             
	}                                                              

}
